---
type Props = {
  icon: string;
  value: string;
  title: string;
};

const { icon, value, title } = Astro.props;

import { Icon } from "astro-icon";
---

<div
  class="grid grid-cols-12 items-center p-10 border-2 border-indigo-500 rounded-lg shadow-md min-w-[200px] max-w-3xl md:col-span-4"
>
  <div class="col-span-4 text-4xl mb-2">
    <Icon name={icon} />
  </div>

  <div class="col-span-8 flex flex-col justify-center items-center">
    <p class="text-4xl font-bold mb-5">{value}</p>

    <p class="text-center text-xl">{title}</p>
  </div>
</div>

<style>
  [astro-icon] {
    width: 1.5em;
    height: 1.5em;
  }
</style>
