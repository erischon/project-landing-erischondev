---
type Props = {
  header: string;
  title: string;
  style?: string;
};

const { header, title, style } = Astro.props;
---

{
  style === "center" ? (
    <div class="flex flex-col mb-10 max-w-3xl items-center mx-auto">
      <p class="text-md text-gray-300 mb-5">{header}</p>

      <h2 class="text-2xl lg:text-4xl font-semibold text-center">{title}</h2>
    </div>
  ) : (
    <div class="flex flex-col mb-10">
      <p class="text-md text-gray-300 mb-5">{header}</p>

      <h2 class="text-2xl lg:text-4xl font-semibold">{title}</h2>
    </div>
  )
}
