---
type Props = {
  header: string;
  title: string;
  style?: string;
};

const { header, title, style } = Astro.props;
---

{
  style === "center" ? (
    <div class="flex flex-col mb-5 max-w-3xl items-center mx-auto">
      <p class="text-md lg:text-lg text-gray-600 mb-3">{header}</p>

      <h2 class="text-2xl lg:text-3xl font-semibold text-center tracking-wider">
        {title}
      </h2>
    </div>
  ) : (
    <div class="flex flex-col mb-5">
      <p class="text-md lg:text-lg text-gray-600 mb-3">{header}</p>

      <h2 class="text-2xl lg:text-3xl font-semibold tracking-wider">{title}</h2>
    </div>
  )
}
