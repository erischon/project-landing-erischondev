---
import { Icon } from "astro-icon";

import Section from "../Section.astro";
import Container from "../Container.astro";
import SectionHeader from "../SectionHeader.astro";
import ProblemCard from "../ProblemCard.astro";

import { sections, problems } from "../../data/index.js";

const { header, title } = sections.problem;
---

<Section id="problem" specificStyle="bg-indigo-100">
  <Container>
    <div class="grid lg:grid-cols-12 gap-5">
      <div
        class="lg:col-span-8 order-1 md:order-2 md:pl-5 text-lg lg:text-xl flex flex-col gap-5"
      >
        <SectionHeader header={header} title={title} />

        <p class="mb-10 text-gray-600">
          Lorem ipsum dolor sit amet consectetur adipisicing elit. Inventore
          deserunt mollitia quia, necessitatibus autem reiciendis sint nisi
          architecto iste, consectetur eveniet asperiores illum repudiandae?
          Exercitationem corporis praesentium laudantium tempora repudiandae
          delectus hic corrupti aperiam.
        </p>

        <button
          class="py-5 px-15 text-xl font-bold bg-indigo-500 text-gray-100 rounded-lg shadow-md w-64"
        >
          <a
            href="https://calendly.com/erischon/contact"
            target="_blank"
            class="animate-bounce"
          >
            En savoir plus
          </a>
        </button>
      </div>

      <div class="lg:col-span-4 my-auto justify-self-center">
        <img
          src="/images/stress.png"
          alt=""
          class="w-60 h-60 lg:w-96 lg:h-96 object-contain"
        />
      </div>
    </div>

    <div
      class="flex flex-col md:flex-row justify-around items-stretch gap-5 pt-10"
    >
      {problems.map((problem) => <ProblemCard {...problem} />)}
    </div>
  </Container>
</Section>

<style>
  [astro-icon] {
    display: inline-flex;

    align-items: center;
    justify-content: center;

    width: 1rem;
    height: 1rem;
  }
</style>
