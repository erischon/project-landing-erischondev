---
import Section from "../Section.astro";
import Container from "../Container.astro";
import SectionHeader from "../SectionHeader.astro";
import MetricsCard from "../MetricsCard.astro";

import { sections } from "../../data/index.js";
import { metrics } from "../../data";

const { header, title } = sections.about;
---

<Section id="about" specificStyle="bg-indigo-100">
  <Container specificStyle="">
    <div class="grid lg:grid-cols-12 gap-5">
      <div class="order-1 lg:order-2 lg:col-span-4 my-auto justify-self-center">
        <img
          src="/images/erischon_indigo.png"
          alt=""
          class="w-60 h-60 lg:w-96 lg:h-96 object-contain"
        />
      </div>

      <div
        class="order-2 lg:order-1 lg:col-span-8 lg:pr-5 text-lg lg:text-xl flex flex-col gap-5"
      >
        <SectionHeader header={header} title={title} />

        <p class="">
          Je suis un développeur React freelance spécialisé dans la
          documentation de code, la création de tests unitaires et de tests
          end-to-end.
        </p>

        <p class="mb-10">
          Je peux vous aider à réduire votre dette technique et à rendre votre
          application plus facile à maintenir et la faire évoluer.
        </p>
      </div>
    </div>

    <div class="grid md:grid-cols-12 w-full justify-center gap-4 py-10">
      {metrics.map((metric) => <MetricsCard {...metric} />)}
    </div>
  </Container>
</Section>
