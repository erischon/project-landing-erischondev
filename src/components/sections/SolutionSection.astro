---
import Icon from "astro-icon";

import Section from "../Section.astro";
import Container from "../Container.astro";
import SectionHeader from "../SectionHeader.astro";

import { sections, solutions } from "../../data/index.js";

const { header, title } = sections.solution;
---

<Section id="solution" specificStyle="">
  <Container>
    <div class="grid lg:grid-cols-12 gap-5">
      <div class="order-1 lg:order-2 lg:col-span-4 my-auto justify-self-center">
        <img
          src="/images/solution.png"
          alt=""
          class="w-60 h-60 lg:w-96 lg:h-96 object-contain"
        />
      </div>

      <div
        class="order-2 lg:order-1 lg:col-span-8 md:pl-5 text-lg lg:text-xl flex flex-col gap-5"
      >
        <SectionHeader header={header} title={title} />

        <p class="">
          Je suis un freelance spécialisé dans la documentation de code React,
          la création de tests unitaires et de tests e2e.
        </p>

        <p>
          Je peux vous aider à réduire votre dette technique et à rendre votre
          application plus facile à maintenir en :
        </p>

        <ul class="flex flex-col gap-2 mb-10">
          {
            solutions.map((solution) => (
              <li class="flex items-start gap-2 mb-2">
                <Icon
                  name="carbon:checkmark-filled"
                  class="text-amber-500 w-[1.5em]"
                />
                {solution.description}
              </li>
            ))
          }
        </ul>

        <button
          class="py-5 px-15 text-xl font-bold bg-indigo-500 text-gray-100 rounded-lg shadow-md w-64"
        >
          <a
            href="https://calendly.com/erischon/contact"
            target="_blank"
            class="animate-bounce"
          >
            En savoir plus
          </a>
        </button>
      </div>
    </div>
  </Container>
</Section>
